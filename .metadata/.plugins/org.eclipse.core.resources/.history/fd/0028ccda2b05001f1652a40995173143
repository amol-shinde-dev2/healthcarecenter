version: "3.8"
services:
  mysqldb:
     image: "mysql"
     restart: always
     ports:
      - "3306:3306"
     environment:
      MYSQL_DATABASE: test
      MYSQL_PASSWORD: root
      MYSQL_USER: root
      MYSQL_ROOT_PASSWORD: root
  server:
   build: .
   restart: always
   ports:
    - 8080:8080
   depends_on:
    - mysqldb
 
     